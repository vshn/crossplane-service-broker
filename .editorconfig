; This file is for unifying the coding style for different editors and IDEs.
; More information at https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[.gitkeep]
insert_final_newline = false

[Makefile]
indent_style = tab

[{*.go, go.mod, *.bats}]
indent_style = tab
indent_size = 4
